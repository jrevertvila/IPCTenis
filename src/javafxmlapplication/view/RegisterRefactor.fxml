                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Repetir Contraseña:" />
                  <TextField fx:id="field_repeat_password" promptText="Nombre de usuario" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0" GridPane.rowIndex="3">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nº Tarjeta de credito:" />
                  <TextField fx:id="field_tarjeta" promptText="Nombre de usuario" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Imagen de perfil" />
                  <TextField fx:id="field_image" promptText="Nombre de usuario" />
               </children>
            </VBox>
         </children>
      </GridPane>
   </right>
   <bottom>
      <Button fx:id="registerBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#registerUser" text="Registrarse" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </bottom>
