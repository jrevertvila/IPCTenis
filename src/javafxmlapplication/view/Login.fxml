<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.controller.LoginController">
   <children>
      <GridPane alignment="CENTER" prefHeight="177.0" prefWidth="349.0" style="-fx-background-color: bla;" VBox.vgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" percentHeight="33.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" percentHeight="33.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox alignment="CENTER" GridPane.rowIndex="1">
               <children>
                  <TextField fx:id="login_nickname" maxWidth="350.0" prefWidth="300.0" promptText="Nombre de usuario" styleClass="inputStyled" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
               <children>
                  <Button fx:id="loginBtn" alignment="CENTER" contentDisplay="CENTER" minHeight="32.0" mnemonicParsing="false" onAction="#loginUser" prefHeight="32.0" prefWidth="200.0" styleClass="loginBtnStyled" text="Iniciar Sesión" textAlignment="CENTER" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <TextField fx:id="login_passwd" maxWidth="350.0" promptText="Contraseña" styleClass="inputStyled" />
               </children>
            </VBox>
         </children>
      </GridPane>
   </children>
</VBox>
